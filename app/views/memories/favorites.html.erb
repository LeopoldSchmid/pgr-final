<% content_for :title, "Favorite Memories" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-text-primary">Favorite Memories</h1>
  </div>

  <% if @favorite_entries.any? %>
    <div class="space-y-4">
      <% @favorite_entries.each do |entry| %>
        <div class="bg-background-secondary rounded-xl p-6 shadow-lg">
          <div class="flex items-start justify-between mb-2">
            <div class="flex items-center space-x-2">
              <%= user_avatar(entry.user, size: 8) %>
              <div>
                <p class="text-sm font-medium text-text-primary"><%= entry.user.email_address %></p>
                <p class="text-xs text-text-secondary">
                  <%= entry.trip.name %> ‚Ä¢
                  <%= entry.entry_date&.strftime("%b %d, %Y") || time_ago_in_words(entry.created_at) + " ago" %>
                </p>
              </div>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </div>

          <% if entry.location.present? %>
            <p class="text-sm text-primary-accent mb-2">üìç <%= entry.location %></p>
          <% end %>

          <p class="text-text-primary whitespace-pre-wrap"><%= entry.content %></p>

          <% if entry.images.attached? %>
            <div class="grid grid-cols-2 gap-2 mt-4">
              <% entry.images.first(4).each do |image| %>
                <%= image_tag image, class: "w-full h-32 object-cover rounded-lg" %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-background-secondary rounded-xl p-12 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-text-secondary mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
      </svg>
      <h2 class="text-xl font-semibold text-text-primary mb-2">No Favorites Yet</h2>
      <p class="text-text-secondary mb-6">Star your favorite memories to see them here</p>
    </div>
  <% end %>
</div>
