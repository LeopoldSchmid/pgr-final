<div class="container mx-auto px-4 py-6">
  
  <!-- Header with Back Navigation -->
  <div class="mb-6">
    <%= link_to plan_trip_path(@trip), class: "text-primary-accent hover:text-blue-400 font-medium flex items-center group mb-4" do %>
      <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to <%= @trip.name %> Planning
    <% end %>
    
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-text-primary">Date Voting</h1>
        <p class="text-text-secondary mt-1"><%= @date_proposals.count %> date proposals</p>
      </div>
    </div>
  </div>

  <!-- Add New Date Proposal -->
  <div class="bg-background-secondary rounded-2xl shadow-lg p-6 mb-6">
    <h3 class="text-lg font-semibold text-text-primary mb-4">Propose New Dates</h3>
    
    <%= form_with model: [@trip, @new_date_proposal], local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :start_date, "Start Date", class: "block text-sm font-medium text-text-primary mb-1" %>
          <%= form.date_field :start_date, 
              class: "w-full p-3 bg-background-primary border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-accent text-text-primary" %>
        </div>
        
        <div>
          <%= form.label :end_date, "End Date", class: "block text-sm font-medium text-text-primary mb-1" %>
          <%= form.date_field :end_date, 
              class: "w-full p-3 bg-background-primary border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-accent text-text-primary" %>
        </div>
      </div>
      
      <div class="flex justify-end">
        <%= form.submit "Propose These Dates", 
            class: "bg-primary-accent text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-600 transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Date Proposals List -->
  <% if @date_proposals.any? %>
    <div class="space-y-4">
      <% @date_proposals.each do |proposal| %>
        <div class="bg-background-secondary rounded-xl shadow-sm p-6">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h3 class="font-bold text-text-primary">
                  <%= proposal.start_date.strftime("%B %d, %Y") %>
                  <% if proposal.end_date != proposal.start_date %>
                    - <%= proposal.end_date.strftime("%B %d, %Y") %>
                  <% end %>
                </h3>
              </div>
              
              <div class="text-sm text-text-secondary mb-3">
                Proposed by <%= proposal.user.email_address %> ‚Ä¢ <%= time_ago_in_words(proposal.created_at) %> ago
              </div>
              
              <div class="flex items-center text-sm text-text-secondary">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Duration: <%= distance_of_time_in_words(proposal.start_date, proposal.end_date) %>
              </div>
            </div>
            
            <div class="flex items-center space-x-2">
              <!-- Vote buttons could go here in the future -->
              <% if proposal.user == Current.user || @trip.user_can_manage_expenses?(Current.user) %>
                <%= link_to trip_date_proposal_path(@trip, proposal), 
                    method: :delete,
                    class: "text-red-500 hover:text-red-600 transition-colors",
                    data: { confirm: "Delete this date proposal?" } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-background-secondary rounded-2xl p-12 text-center">
      <div class="text-6xl mb-4 opacity-40">üó≥Ô∏è</div>
      <h3 class="text-xl font-bold text-text-primary mb-3">No date proposals yet</h3>
      <p class="text-text-secondary mb-6">
        Be the first to propose dates for this trip!
      </p>
    </div>
  <% end %>

</div>