<% content_for :title, "#{@trip.name} - Dates" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Date Proposals Section -->
  <div class="bg-background-secondary rounded-2xl shadow-lg p-6 mb-6 animate-fade-in">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-text-primary">Trip Dates</h1>
      <%= link_to trip_date_proposals_path(@trip), class: "bg-primary-accent text-white px-4 py-2 rounded-lg font-medium hover:bg-primary-accent/90 transition-colors flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <span>Manage Dates</span>
      <% end %>
    </div>

    <!-- Fixed Dates -->
    <% if @trip.start_date && @trip.end_date %>
      <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-lg">
        <div class="flex items-center gap-3 mb-2">
          <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h2 class="text-lg font-semibold text-text-primary">Confirmed Trip Dates</h2>
        </div>
        <p class="text-text-primary font-medium ml-9">
          <%= @trip.start_date.strftime("%B %d") %> - <%= @trip.end_date.strftime("%B %d, %Y") %>
        </p>
        <p class="text-sm text-text-secondary ml-9 mt-1">
          <%= distance_of_time_in_words(@trip.start_date, @trip.end_date) %>
        </p>
      </div>
    <% end %>

    <!-- Date Proposals -->
    <% if @date_proposals.any? %>
      <div class="space-y-3">
        <h2 class="text-lg font-semibold text-text-primary mb-3">
          <%= @date_proposals.count %> Date Proposal<%= @date_proposals.count != 1 ? 's' : '' %>
        </h2>
        <% @date_proposals.each do |proposal| %>
          <div class="p-4 border border-white/10 rounded-lg hover:border-primary-accent/30 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <% if proposal.title.present? %>
                  <p class="text-text-primary font-semibold mb-1">
                    <%= proposal.title %>
                  </p>
                <% end %>
                <p class="text-text-primary <%= proposal.title.present? ? 'text-sm' : 'font-medium' %>">
                  <%= proposal.start_date.strftime("%B %d") %> - <%= proposal.end_date.strftime("%B %d, %Y") %>
                </p>
                <p class="text-sm text-text-secondary mt-1">
                  Proposed by <%= proposal.user.email_address %>
                </p>
                <% if proposal.description.present? %>
                  <p class="text-sm text-text-secondary mt-2">
                    <%= proposal.description %>
                  </p>
                <% end %>
              </div>
              <div class="ml-4 text-right">
                <div class="text-sm text-text-secondary">
                  <%= distance_of_time_in_words(proposal.start_date, proposal.end_date) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="w-16 h-16 mx-auto text-text-primary/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <h3 class="text-lg font-medium text-text-primary mb-2">No Date Proposals Yet</h3>
        <p class="text-text-secondary mb-4">Propose dates and vote together to find the best time for everyone</p>
        <%= link_to trip_date_proposals_path(@trip), class: "inline-flex items-center gap-2 bg-primary-accent text-white px-6 py-2 rounded-lg font-medium hover:bg-primary-accent/90 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <span>Propose Dates</span>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="bg-background-secondary rounded-2xl shadow-lg p-6 animate-fade-in">
    <h2 class="text-xl font-bold text-text-primary mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= link_to trip_date_proposals_path(@trip), class: "p-4 border border-white/10 rounded-lg hover:border-primary-accent/30 transition-colors group" do %>
        <div class="flex items-center gap-3">
          <div class="p-2 bg-primary-accent/10 rounded-lg group-hover:bg-primary-accent/20 transition-colors">
            <svg class="w-6 h-6 text-primary-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <p class="font-medium text-text-primary">Interactive Calendar</p>
            <p class="text-sm text-text-secondary">View proposals and availability</p>
          </div>
        </div>
      <% end %>

      <%= link_to trip_details_path, class: "p-4 border border-white/10 rounded-lg hover:border-primary-accent/30 transition-colors group" do %>
        <div class="flex items-center gap-3">
          <div class="p-2 bg-primary-accent/10 rounded-lg group-hover:bg-primary-accent/20 transition-colors">
            <svg class="w-6 h-6 text-primary-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </div>
          <div>
            <p class="font-medium text-text-primary">Edit Trip Details</p>
            <p class="text-sm text-text-secondary">Update fixed dates and settings</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
