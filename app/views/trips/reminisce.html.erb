<div class="container mx-auto px-4 py-6">
  <!-- Trip Header -->
  <div class="bg-gradient-to-r from-white to-purple-50 rounded-2xl shadow-lg border border-purple-200 p-8 mb-8">
    <div class="mb-6">
      <%= link_to reminisce_path, class: "text-purple-700 hover:text-purple-900 font-medium flex items-center group mb-4" do %>
        <span class="transform group-hover:-translate-x-1 transition-transform mr-2">ğŸ“¸</span> Trip Memories
      <% end %>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-800 to-pink-700 bg-clip-text text-transparent">
        <%= @trip.name %>
      </h1>
    </div>
    
    <div class="flex items-center space-x-4">
      <span class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-4 py-2 rounded-xl text-sm font-bold shadow-md">
        ğŸ’­ Completed
      </span>
      <% if @trip.start_date && @trip.end_date %>
        <span class="text-purple-700 font-medium">
          ğŸ“… <%= @trip.start_date.strftime("%b %d") %> - <%= @trip.end_date.strftime("%b %d, %Y") %>
        </span>
        <span class="text-purple-700 font-medium">
          â³ <%= (@trip.end_date - @trip.start_date).to_i + 1 %> days
        </span>
      <% end %>
    </div>
  </div>

  <!-- Trip Summary Stats -->
  <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl shadow-lg border border-purple-200 p-8 mb-8">
    <h3 class="text-xl font-bold text-purple-900 mb-6 flex items-center">
      <span class="mr-3">ğŸ“Š</span> Trip Summary
    </h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div class="text-center">
        <div class="text-3xl font-bold text-purple-600 mb-2">
          <%= (@trip.start_date && @trip.end_date) ? (@trip.end_date - @trip.start_date).to_i + 1 : "â€”" %>
        </div>
        <div class="text-sm text-purple-700 font-medium">Days</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-purple-600 mb-2"><%= @journal_summary[:total_entries] %></div>
        <div class="text-sm text-purple-700 font-medium">Journal Entries</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-purple-600 mb-2"><%= @journal_summary[:favorite_moments] %></div>
        <div class="text-sm text-purple-700 font-medium">Favorite Moments</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-purple-600 mb-2"><%= @journal_summary[:locations_visited] %></div>
        <div class="text-sm text-purple-700 font-medium">Places Visited</div>
      </div>
    </div>
  </div>

  <!-- Instagram-Style Photo Grid -->
  <% if @entries_with_images.any? %>
    <div class="mb-8">
      <h3 class="text-2xl font-bold text-purple-900 mb-6 flex items-center">
        <span class="mr-3">ğŸ“¸</span> Photo Memories
      </h3>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% @entries_with_images.each do |entry| %>
          <div class="group relative bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105">
            <%= image_tag entry.image, class: "w-full h-48 object-cover" %>
            
            <!-- Overlay on hover -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <div class="text-white text-sm font-medium mb-1">
                  <%= entry.entry_date.strftime("%b %d") %>
                  <% if entry.favorite? %>
                    <span class="ml-2">â­</span>
                  <% end %>
                </div>
                <% if entry.location_name %>
                  <div class="text-white/80 text-xs">
                    ğŸ“ <%= entry.location_name %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Memory Map -->
  <% if @entries_with_locations.any? %>
    <div class="mb-8">
      <h3 class="text-2xl font-bold text-purple-900 mb-6 flex items-center">
        <span class="mr-3">ğŸ—ºï¸</span> Memory Map
      </h3>
      
      <div class="bg-gradient-to-r from-white to-purple-50 rounded-2xl shadow-lg border border-purple-200 p-6">
        <div id="reminisce-map" 
             class="h-96 rounded-xl"
             data-controller="map" 
             data-map-entries-value="<%= @entries_with_locations.map do |entry|
               {
                 id: entry.id,
                 latitude: entry.latitude.to_f,
                 longitude: entry.longitude.to_f,
                 content: entry.content,
                 location: entry.location,
                 entry_date: entry.entry_date.iso8601,
                 favorite: entry.favorite?,
                 image_url: entry.image.attached? ? rails_blob_path(entry.image, only_path: true) : nil
               }
             end.to_json %>"
             data-map-target="container">
        </div>
        
        <div class="mt-4 text-sm text-purple-600 flex items-center justify-between">
          <span>ğŸ“ <%= @entries_with_locations.count %> memories mapped across your journey</span>
          <span>â­ Favorite moments, ğŸ“ Regular memories</span>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Trip Journal Memories -->
  <% if @journal_entries.any? %>
    <div class="mb-8">
      <!-- Favorite Moments -->
      <% if @favorite_moments.any? %>
        <div class="mb-8">
          <h3 class="text-2xl font-bold text-yellow-700 mb-6 flex items-center">
            <span class="mr-3">â­</span> Favorite Moments
          </h3>
          <div class="grid gap-6 md:grid-cols-2">
            <% @favorite_moments.each do |entry| %>
              <div class="bg-gradient-to-r from-yellow-50 to-orange-50 rounded-2xl shadow-lg border border-yellow-200 p-6 ring-2 ring-yellow-300">
                <div class="flex items-center mb-4">
                  <div class="text-yellow-700 font-bold mr-3">
                    <%= entry.entry_date.strftime("%b %d") %>
                  </div>
                  <% if entry.location.present? %>
                    <div class="text-yellow-600 text-sm bg-yellow-100 px-3 py-1 rounded-full">
                      ğŸ“ <%= entry.location %>
                    </div>
                  <% end %>
                </div>
                <div class="text-yellow-800 leading-relaxed">
                  <%= format_journal_content(entry.content) %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- All Journal Entries -->
      <h3 class="text-2xl font-bold text-purple-900 mb-6 flex items-center">
        <span class="mr-3">ğŸ“–</span> Complete Trip Journal
      </h3>
      <div class="space-y-6">
        <% @journal_entries.each do |entry| %>
          <div class="bg-gradient-to-r from-white to-purple-50 rounded-2xl shadow-lg border border-purple-200 p-6 <%= entry.favorite? ? 'ring-2 ring-yellow-400' : '' %>">
            <div class="flex items-center space-x-3 mb-4">
              <div class="text-purple-700 font-bold">
                <%= entry.entry_date.strftime("%b %d, %Y") %>
              </div>
              <% if entry.location.present? %>
                <div class="text-purple-600 text-sm bg-purple-100 px-3 py-1 rounded-full">
                  ğŸ“ <%= entry.location %>
                </div>
              <% end %>
              <% if entry.favorite? %>
                <div class="text-yellow-600">â­ Favorite</div>
              <% end %>
            </div>
            
            <div class="text-purple-800 leading-relaxed">
              <%= format_journal_content(entry.content) %>
            </div>
            
            <div class="mt-4 text-xs text-purple-600">
              Captured <%= time_ago_in_words(entry.created_at) %> ago
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Empty Journal State -->
    <div class="bg-gradient-to-r from-white to-purple-50 rounded-2xl shadow-lg border border-purple-200 p-12 mb-8">
      <div class="text-center">
        <div class="text-6xl mb-4 opacity-60">ğŸ“”</div>
        <h3 class="text-xl font-bold text-purple-900 mb-3">No Journal Entries Yet</h3>
        <p class="text-purple-700 mb-6">This trip didn't have any journal entries. Next time, capture the moments as they happen!</p>
      </div>
    </div>
  <% end %>

  <!-- Other Memories Sections -->
  <div class="grid gap-6 md:grid-cols-2">

    <!-- Favorite Recipes -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">â­ Favorite Recipes</h3>
        <button class="text-blue-600 text-sm hover:text-blue-800">Save Recipe</button>
      </div>
      
      <div class="text-center py-8 text-gray-500">
        <div class="text-4xl mb-2">ğŸ½ï¸</div>
        <p class="text-sm">No favorite recipes saved</p>
        <button class="mt-2 text-blue-600 text-sm hover:text-blue-800">Add recipes to remember</button>
      </div>
    </div>

    <!-- Expense Summary -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">ğŸ’° Final Expense Summary</h3>
        <%= link_to trip_expenses_path(@trip), class: "text-blue-600 text-sm hover:text-blue-800" do %>
          View Details
        <% end %>
      </div>
      
      <% if @trip.expenses.exists? %>
        <div class="space-y-4">
          <!-- Total Expenses -->
          <div class="bg-purple-50 rounded-lg p-4">
            <div class="flex justify-between items-center">
              <span class="text-purple-700 font-medium">Total Trip Cost</span>
              <span class="text-2xl font-bold text-purple-900"><%= "%.2f" % @trip.total_expenses %> EUR</span>
            </div>
          </div>

          <!-- Expense Breakdown by Category -->
          <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
            <% @trip.expenses_by_category.each do |category, amount| %>
              <div class="text-center p-3 bg-gray-50 rounded-lg">
                <div class="text-xl mb-1">
                  <%= case category
                      when 'food' then 'ğŸ½ï¸'
                      when 'accommodation' then 'ğŸ¨' 
                      when 'transport' then 'ğŸš—'
                      when 'activities' then 'ğŸ¯'
                      when 'shopping' then 'ğŸ›’'
                      else 'ğŸ’°'
                      end %>
                </div>
                <div class="font-bold text-purple-700"><%= "%.2f" % amount %> EUR</div>
                <div class="text-xs text-gray-600 capitalize"><%= category %></div>
              </div>
            <% end %>
          </div>

          <!-- Final Balance -->
          <div class="bg-green-50 rounded-lg p-4">
            <div class="flex justify-between items-center">
              <span class="text-green-700 font-medium">Your Final Balance</span>
              <span class="font-bold <%= @trip.user_balance(Current.user) >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= @trip.user_balance(Current.user) >= 0 ? '+' : '' %><%= "%.2f" % @trip.user_balance(Current.user) %> EUR
              </span>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          <div class="text-4xl mb-2">ğŸ“Š</div>
          <p class="text-sm">No expenses recorded</p>
          <p class="text-xs text-gray-400 mt-1">Expenses from the Go phase would appear here</p>
        </div>
      <% end %>
    </div>

    <!-- Learnings & Notes -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">ğŸ“ Trip Notes</h3>
        <button class="text-blue-600 text-sm hover:text-blue-800">Add Notes</button>
      </div>
      
      <div class="text-center py-8 text-gray-500">
        <div class="text-4xl mb-2">ğŸ’­</div>
        <p class="text-sm">No notes or learnings saved</p>
        <button class="mt-2 text-blue-600 text-sm hover:text-blue-800">Add what you learned</button>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="mt-8 bg-purple-50 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Use This Trip</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <button class="flex items-center justify-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <span class="text-2xl mr-3">ğŸ“‹</span>
        <div class="text-left">
          <div class="font-medium text-gray-900">Copy as Template</div>
          <div class="text-sm text-gray-600">Create new trip with same plan</div>
        </div>
      </button>
      
      <button class="flex items-center justify-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <span class="text-2xl mr-3">ğŸ½ï¸</span>
        <div class="text-left">
          <div class="font-medium text-gray-900">Save Recipes</div>
          <div class="text-sm text-gray-600">Add successful meals to cookbook</div>
        </div>
      </button>
      
      <button class="flex items-center justify-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <span class="text-2xl mr-3">ğŸ“¤</span>
        <div class="text-left">
          <div class="font-medium text-gray-900">Export Summary</div>
          <div class="text-sm text-gray-600">Download trip report</div>
        </div>
      </button>
    </div>
  </div>
</div>