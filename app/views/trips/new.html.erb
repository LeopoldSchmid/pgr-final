<div class="container mx-auto px-4 py-6 max-w-2xl">
  <div class="mb-8">
    <%= link_to plan_path, class: "text-amber-700 hover:text-amber-900 font-medium flex items-center group" do %>
      <span class="transform group-hover:-translate-x-1 transition-transform mr-2">üåø</span> Back to Planning
    <% end %>
    <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-800 to-orange-700 bg-clip-text text-transparent mt-4">
      üå± Plant Your Next Adventure
    </h1>
    <p class="text-amber-700 mt-2">Let's grow something beautiful together!</p>
  </div>

  <div class="bg-gradient-to-r from-white to-amber-50 rounded-2xl shadow-lg border border-amber-200 p-8">
    <%= form_with model: @trip, local: true, class: "space-y-6" do |form| %>
      <% if @trip.errors.any? %>
        <div class="bg-gradient-to-r from-red-50 to-pink-50 border border-red-200 rounded-xl p-6">
          <h3 class="text-sm font-bold text-red-800 mb-3 flex items-center">
            <span class="mr-2">‚ö†Ô∏è</span> Please fix the following errors:
          </h3>
          <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
            <% @trip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          placeholder: "e.g., Summer Cabin Retreat 2025" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, 
          rows: 4,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none",
          placeholder: "Describe your trip, who's coming, what you're planning to do..." %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :start_date, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <p class="text-xs text-gray-500 mt-1">Optional - you can set dates later</p>
      </div>

      <div>
        <%= form.label :end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :end_date, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <p class="text-xs text-gray-500 mt-1">Optional - you can set dates later</p>
      </div>
    </div>

      <div class="flex justify-between items-center pt-6">
        <%= link_to "Cancel", plan_path, 
            class: "text-amber-700 hover:text-amber-900 font-bold flex items-center group" %>
        
        <%= form.submit "üå± Plant This Trip", 
            class: "bg-gradient-to-r from-amber-600 to-orange-600 text-white px-8 py-3 rounded-xl font-bold hover:from-amber-700 hover:to-orange-700 transition-all duration-200 shadow-lg transform hover:scale-105 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
