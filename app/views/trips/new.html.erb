<div class="container mx-auto px-4 py-6 max-w-2xl">
  <div class="mb-8">
    <%= link_to plan_path, class: "text-primary-accent hover:text-primary-accent/80 font-medium flex items-center group" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 transform group-hover:-translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Back to Planning
    <% end %>
    <h1 class="text-3xl font-bold text-text-primary mt-4">
      New Trip
    </h1>
  </div>

  <div class="card-modern">
    <%= form_with model: @trip, local: true, class: "space-y-6" do |form| %>
      <% if @trip.errors.any? %>
        <div class="bg-accent-red/20 border border-accent-red rounded-xl p-6">
          <h3 class="text-sm font-bold text-accent-red-dark mb-3 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.316 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
            Please fix the following errors:
          </h3>
          <ul class="list-disc list-inside text-sm text-accent-red-dark space-y-1">
            <% @trip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-text-primary mb-1" %>
      <%= form.text_field :name, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-accent focus:border-transparent",
          placeholder: "e.g., Summer Cabin Retreat 2025" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-text-primary mb-1" %>
      <%= form.text_area :description, 
          rows: 4,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-accent focus:border-transparent resize-none",
          placeholder: "Describe your trip, who's coming, what you're planning to do..." %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :start_date, class: "block text-sm font-medium text-text-primary mb-1" %>
        <%= form.date_field :start_date, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-accent focus:border-transparent" %>
        <p class="text-xs text-gray-500 mt-1">Optional - you can set dates later</p>
      </div>

      <div>
        <%= form.label :end_date, class: "block text-sm font-medium text-text-primary mb-1" %>
        <%= form.date_field :end_date, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-accent focus:border-transparent" %>
        <p class="text-xs text-gray-500 mt-1">Optional - you can set dates later</p>
      </div>
    </div>

      <div class="flex justify-between items-center pt-6">
        <%= link_to "Cancel", plan_path, 
            class: "text-text-secondary hover:text-text-primary font-medium flex items-center group" %>
        
        <%= form.submit "Create Trip", 
            class: "bg-primary-accent text-white px-8 py-3 rounded-xl font-bold hover:bg-primary-accent/80 transition-all duration-200 shadow-lg transform hover:scale-105 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
