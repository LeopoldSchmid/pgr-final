<div class="container mx-auto px-4 py-6">
  <!-- Trip Header -->
  <div class="bg-gradient-to-r from-white to-amber-50 rounded-2xl shadow-lg border border-amber-200 p-8 mb-8">
    <div class="mb-6">
      <%= link_to plan_path, class: "text-amber-700 hover:text-amber-900 font-medium flex items-center group mb-4" do %>
        <span class="transform group-hover:-translate-x-1 transition-transform mr-2">🌿</span> All Trips
      <% end %>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-800 to-orange-700 bg-clip-text text-transparent">
        <%= @trip.name %>
      </h1>
    </div>
    
    <% if @trip.description %>
      <p class="text-amber-700 mb-6 text-lg leading-relaxed"><%= @trip.description %></p>
    <% end %>
    
    <div class="flex items-center space-x-4">
      <span class="bg-gradient-to-r from-amber-500 to-orange-500 text-white px-4 py-2 rounded-xl text-sm font-bold shadow-md">
        🌱 Planning
      </span>
      <span class="text-amber-700 font-medium">
        <% if @trip.start_date %>
          📅 <%= @trip.start_date.strftime("%b %d, %Y") %>
        <% else %>
          📅 Dates TBD
        <% end %>
      </span>
    </div>
  </div>

  <!-- Planning Sections -->
  <div class="grid gap-6 md:grid-cols-2">
    <!-- Dates & Destination -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">📅 Dates & Destination</h3>
        <button class="text-blue-600 text-sm hover:text-blue-800">Edit</button>
      </div>
      
      <div class="space-y-3">
        <div>
          <label class="text-sm text-gray-600">Start Date</label>
          <div class="text-gray-900">
            <%= @trip.start_date ? @trip.start_date.strftime("%B %d, %Y") : "Not set" %>
          </div>
        </div>
        <div>
          <label class="text-sm text-gray-600">End Date</label>
          <div class="text-gray-900">
            <%= @trip.end_date ? @trip.end_date.strftime("%B %d, %Y") : "Not set" %>
          </div>
        </div>
        <div>
          <label class="text-sm text-gray-600">Destination</label>
          <div class="text-gray-900">Not set</div>
        </div>
      </div>
    </div>

    <!-- Trip Members -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">👥 Trip Members</h3>
        <button class="text-blue-600 text-sm hover:text-blue-800">Invite</button>
      </div>
      
      <div class="space-y-2">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white text-sm font-medium">
              <%= @trip.user.email_address[0].upcase %>
            </div>
            <div class="ml-3">
              <div class="text-sm font-medium text-gray-900"><%= @trip.user.email_address %></div>
              <div class="text-xs text-gray-500">Owner</div>
            </div>
          </div>
        </div>
        <!-- Trip Members -->
        <% if @trip.active_members.any? %>
          <div class="space-y-3 mb-4">
            <% @trip.active_members.each do |member| %>
              <div class="flex items-center">
                <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white text-sm font-medium">
                  <%= member.email_address[0].upcase %>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900"><%= member.email_address %></div>
                  <div class="text-xs text-gray-500">
                    <%= @trip.member_role(member)&.titleize || 'Member' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        
        <!-- Pending Invitations -->
        <% if @trip.invitations.pending.any? %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mb-4">
            <div class="text-xs font-medium text-yellow-800 mb-2">Pending Invitations</div>
            <% @trip.invitations.pending.each do |invitation| %>
              <div class="text-sm text-yellow-700 mb-1">
                📧 <%= invitation.email %> (<%= invitation.role %>)
                <span class="text-xs text-yellow-600">
                  - expires <%= time_ago_in_words(invitation.expires_at) %> from now
                </span>
              </div>
            <% end %>
          </div>
        <% end %>
        
        <!-- Invite Section -->
        <div class="text-center py-4 border-t border-gray-200">
          <%= link_to new_trip_invitation_path(@trip), 
              class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-sm font-medium rounded-lg hover:from-purple-700 hover:to-pink-700 transition-all duration-200 shadow-md" do %>
            <span class="mr-2">💌</span> Invite Friends
          <% end %>
          <% if @trip.invitations.any? %>
            <div class="mt-2">
              <%= link_to trip_invitations_path(@trip), 
                  class: "text-purple-600 text-sm hover:text-purple-800 font-medium" do %>
                Manage Invitations
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Activities & Plans -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">🎯 Activities & Plans</h3>
        <button class="text-blue-600 text-sm hover:text-blue-800">Add</button>
      </div>
      
      <div class="text-center py-8 text-gray-500">
        <div class="text-4xl mb-2">📋</div>
        <p class="text-sm">No activities planned yet</p>
        <button class="mt-2 text-blue-600 text-sm hover:text-blue-800">Add your first activity</button>
      </div>
    </div>

    <!-- Budget & Expenses -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">💰 Budget & Expenses</h3>
        <%= link_to trip_expenses_path(@trip), class: "text-blue-600 text-sm hover:text-blue-800" do %>
          Manage Expenses
        <% end %>
      </div>
      
      <% if @trip.expenses.exists? %>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Total Expenses</span>
            <span class="font-medium"><%= "%.2f" % @trip.total_expenses %> EUR</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Your Balance</span>
            <span class="font-medium <%= @trip.user_balance(Current.user) >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= @trip.user_balance(Current.user) >= 0 ? '+' : '' %><%= "%.2f" % @trip.user_balance(Current.user) %> EUR
            </span>
          </div>
          <div class="pt-2">
            <%= link_to trip_expenses_path(@trip), 
                class: "text-blue-600 text-sm hover:text-blue-800 flex items-center" do %>
              📊 View All Expenses →
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          <div class="text-4xl mb-2">💰</div>
          <p class="text-sm">No expenses tracked yet</p>
          <%= link_to new_trip_expense_path(@trip), 
              class: "mt-2 text-blue-600 text-sm hover:text-blue-800 inline-block" do %>
            Add first expense
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Meals & Recipes -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">🍽️ Meals & Recipes</h3>
        <%= link_to trip_recipes_path(@trip), class: "text-blue-600 text-sm hover:text-blue-800" do %>
          Plan Meals
        <% end %>
      </div>
      
      <div class="text-center py-8 text-gray-500">
        <div class="text-4xl mb-2">🍳</div>
        <p class="text-sm">No meals planned yet</p>
        <button class="mt-2 text-blue-600 text-sm hover:text-blue-800">Start meal planning</button>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-gray-50 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <button class="flex flex-col items-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <span class="text-2xl mb-2">📅</span>
        <span class="text-sm font-medium text-gray-700">Set Dates</span>
      </button>
      <button class="flex flex-col items-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <span class="text-2xl mb-2">✉️</span>
        <span class="text-sm font-medium text-gray-700">Invite Friends</span>
      </button>
      <%= link_to new_trip_expense_path(@trip), class: "flex flex-col items-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow" do %>
        <span class="text-2xl mb-2">💰</span>
        <span class="text-sm font-medium text-gray-700">Add Expense</span>
      <% end %>
      <button class="flex flex-col items-center p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <span class="text-2xl mb-2">🏃</span>
        <span class="text-sm font-medium text-gray-700">Start Trip</span>
      </button>
    </div>
  </div>
</div>