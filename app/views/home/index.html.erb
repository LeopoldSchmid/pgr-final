            View All â†’
          <% end %>
        </div>
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          <% @planning_trips.first(3).each do |trip| %>
            <div class="bg-background-secondary rounded-lg shadow-sm p-4">
              <div class="flex items-center justify-between mb-2">
                <h3 class="font-semibold text-text-primary"><%= trip.name %></h3>
                <% if trip.user != Current.user %>
                  <span class="bg-accent-yellow text-text-primary text-xs px-2 py-1 rounded-full">Member</span>
                <% end %>
              </div>
              <p class="text-text-secondary text-sm mb-3 line-clamp-2"><%= trip.description %></p>
