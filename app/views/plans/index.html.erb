<% content_for :title, "#{@trip.name} - Plans" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Page Header -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-text-primary mb-2">
      <%= t('plans.title') %>
    </h1>
    <p class="text-text-secondary">
      <%= t('plans.subtitle', trip: @trip.name) %>
    </p>
  </div>

  <!-- Planning Overview Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
      <div class="text-2xl font-bold text-primary-accent"><%= @total_proposals %></div>
      <div class="text-sm text-text-secondary"><%= t('plans.stats.date_proposals') %></div>
    </div>
    <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
      <div class="text-2xl font-bold text-primary-accent"><%= @total_discussions %></div>
      <div class="text-sm text-text-secondary"><%= t('plans.stats.discussions') %></div>
    </div>
    <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
      <div class="text-2xl font-bold text-primary-accent"><%= @selected_recipes_count %></div>
      <div class="text-sm text-text-secondary"><%= t('plans.stats.recipes') %></div>
    </div>
    <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
      <div class="text-2xl font-bold text-primary-accent"><%= @total_shopping_items %></div>
      <div class="text-sm text-text-secondary"><%= t('plans.stats.shopping_items') %></div>
    </div>
  </div>

  <!-- Date Proposals Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-text-primary"><%= t('date_proposals.title') %></h2>
      <%= link_to trip_date_proposals_path(@trip), class: "text-primary-accent hover:underline text-sm font-medium" do %>
        <%= t('common.view_all') %> →
      <% end %>
    </div>

    <% if @date_proposals.any? %>
      <div class="space-y-3">
        <% @date_proposals.first(3).each do |proposal| %>
          <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
            <div class="flex justify-between items-start">
              <div>
                <div class="font-semibold text-text-primary">
                  <%= l(proposal.start_date, format: :long) %> - <%= l(proposal.end_date, format: :long) %>
                </div>
                <div class="text-sm text-text-secondary mt-1">
                  <%= t('date_proposals.proposed_by', name: proposal.proposed_by.email_address) %>
                </div>
              </div>
              <span class="text-xs px-2 py-1 rounded-full bg-primary-accent/10 text-primary-accent">
                <%= proposal.user_availabilities.count %> <%= t('date_proposals.votes') %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-background-secondary rounded-lg p-6 text-center text-text-secondary">
        <%= t('date_proposals.empty') %>
      </div>
    <% end %>
  </div>

  <!-- Discussions Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-text-primary"><%= t('discussions.title') %></h2>
      <%= link_to trip_discussions_path(@trip), class: "text-primary-accent hover:underline text-sm font-medium" do %>
        <%= t('common.view_all') %> →
      <% end %>
    </div>

    <% if @discussions.any? %>
      <div class="space-y-3">
        <% @discussions.each do |discussion| %>
          <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <%= link_to trip_discussion_path(@trip, discussion), class: "font-semibold text-text-primary hover:text-primary-accent" do %>
                  <%= discussion.title %>
                <% end %>
                <div class="text-sm text-text-secondary mt-1 line-clamp-2">
                  <%= discussion.content.truncate(100) %>
                </div>
                <div class="text-xs text-text-secondary mt-2">
                  <%= compact_time_ago(discussion.created_at) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-background-secondary rounded-lg p-6 text-center text-text-secondary">
        <%= t('discussions.empty') %>
      </div>
    <% end %>
  </div>

  <!-- Recipes Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-text-primary"><%= t('recipes.title') %></h2>
      <%= link_to trip_recipes_path(@trip), class: "text-primary-accent hover:underline text-sm font-medium" do %>
        <%= t('common.view_all') %> →
      <% end %>
    </div>

    <% if @recipes.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @recipes.first(4).each do |recipe| %>
          <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
            <div class="font-semibold text-text-primary"><%= recipe.name %></div>
            <div class="text-sm text-text-secondary mt-1">
              <%= recipe.description&.truncate(60) %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-background-secondary rounded-lg p-6 text-center text-text-secondary">
        <%= t('recipes.empty') %>
      </div>
    <% end %>
  </div>

  <!-- Shopping Lists Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-text-primary"><%= t('shopping_lists.title') %></h2>
      <%= link_to trip_shopping_lists_path(@trip), class: "text-primary-accent hover:underline text-sm font-medium" do %>
        <%= t('common.view_all') %> →
      <% end %>
    </div>

    <% if @shopping_lists.any? %>
      <div class="space-y-3">
        <% @shopping_lists.each do |list| %>
          <div class="bg-background-secondary rounded-lg p-4 shadow-sm">
            <%= link_to trip_shopping_list_path(@trip, list), class: "font-semibold text-text-primary hover:text-primary-accent" do %>
              <%= list.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-background-secondary rounded-lg p-6 text-center text-text-secondary">
        <%= t('shopping_lists.empty') %>
      </div>
    <% end %>
  </div>
</div>
