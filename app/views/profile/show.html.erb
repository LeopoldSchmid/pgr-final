<div class="container mx-auto px-4 py-6">
  <!-- Navigation Context Indicator -->
  <%= navigation_context_indicator.html_safe if navigation_context_indicator %>

  <!-- Profile Header -->
  <div class="bg-background-secondary rounded-2xl shadow-sm p-8 mb-8">
    <div class="flex items-center space-x-6">
      <!-- Profile Avatar -->
      <div class="w-20 h-20 bg-primary-accent rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      
      <!-- Profile Info -->
      <div>
        <h1 class="text-3xl font-bold text-text-primary mb-2">Profile</h1>
        <p class="text-text-secondary text-lg"><%= @user.email_address %></p>
      </div>
    </div>
  </div>

  <!-- User Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-primary-accent mb-2"><%= @user_stats[:total_trips] %></div>
      <div class="text-sm font-medium text-text-secondary">Total Trips</div>
    </div>
    
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-accent-green mb-2"><%= @user_stats[:completed_trips] %></div>
      <div class="text-sm font-medium text-text-secondary">Completed</div>
    </div>
    
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-accent-yellow mb-2"><%= @user_stats[:journal_entries] %></div>
      <div class="text-sm font-medium text-text-secondary">Journal Entries</div>
    </div>
    
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-accent-red mb-2"><%= @user_stats[:favorite_locations] %></div>
      <div class="text-sm font-medium text-text-secondary">Favorite Spots</div>
    </div>
  </div>

  <!-- Account Settings -->
  <div class="bg-background-secondary rounded-2xl shadow-sm p-8 mb-8">
    <h2 class="text-2xl font-bold text-text-primary mb-6">Account Settings</h2>
    
    <div class="space-y-4">
      <!-- Account Actions -->
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary">Email Address</h3>
          <p class="text-sm text-text-secondary"><%= @user.email_address %></p>
        </div>
        <button class="text-primary-accent hover:text-blue-400 font-medium">Update</button>
      </div>
      
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary">Password</h3>
          <p class="text-sm text-text-secondary">Last updated recently</p>
        </div>
        <%= link_to "Change", new_password_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
    </div>
  </div>

  <!-- App Settings -->
  <div class="bg-background-secondary rounded-2xl shadow-sm p-8 mb-8">
    <h2 class="text-2xl font-bold text-text-primary mb-6">App Preferences</h2>
    
    <div class="space-y-4">
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary">Recipe Library</h3>
          <p class="text-sm text-text-secondary">Browse all available recipes</p>
        </div>
        <%= link_to "Browse Recipes", recipe_library_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
      
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary">Timeline</h3>
          <p class="text-sm text-text-secondary">View all your trip moments</p>
        </div>
        <%= link_to "View Timeline", timeline_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
      
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary">Favorite Locations</h3>
          <p class="text-sm text-text-secondary">Manage your saved places</p>
        </div>
        <%= link_to "View Locations", favorite_locations_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
    </div>
  </div>

  <!-- Logout -->
  <div class="text-center">
    <%= button_to "Sign Out", session_path, method: :delete, 
        class: "bg-accent-red text-white px-8 py-3 rounded-xl font-semibold hover:bg-red-600 transition-colors shadow-sm",
        data: { confirm: "Are you sure you want to sign out?" } %>
  </div>
</div>