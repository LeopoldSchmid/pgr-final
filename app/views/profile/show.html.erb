<div class="container mx-auto px-4 py-6">
  <!-- Navigation Context Indicator -->
  <%= navigation_context_indicator.html_safe if navigation_context_indicator %>

  <!-- Profile Header -->
  <div class="bg-background-secondary rounded-2xl shadow-sm p-8 mb-8">
    <div class="flex items-center space-x-6">
      <!-- Profile Avatar -->
      <div class="w-20 h-20 bg-primary-accent rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      
      <!-- Profile Info -->
      <div>
        <h1 class="text-3xl font-bold text-text-primary mb-2"><%= t('profile.title') %></h1>
        <p class="text-text-secondary text-lg"><%= @user.email_address %></p>
      </div>
    </div>
  </div>

  <!-- User Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-primary-accent mb-2"><%= @user_stats[:total_trips] %></div>
      <div class="text-sm font-medium text-text-secondary"><%= t('profile.stats.total_trips') %></div>
    </div>
    
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-accent-green mb-2"><%= @user_stats[:completed_trips] %></div>
      <div class="text-sm font-medium text-text-secondary"><%= t('profile.stats.completed') %></div>
    </div>
    
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-accent-yellow mb-2"><%= @user_stats[:journal_entries] %></div>
      <div class="text-sm font-medium text-text-secondary"><%= t('profile.stats.journal_entries') %></div>
    </div>
    
    <div class="bg-background-secondary rounded-xl p-6 text-center">
      <div class="text-3xl font-bold text-accent-red mb-2"><%= @user_stats[:favorite_locations] %></div>
      <div class="text-sm font-medium text-text-secondary"><%= t('profile.stats.favorite_spots') %></div>
    </div>
  </div>

  <!-- Language Preferences -->
  <div class="bg-background-secondary rounded-2xl shadow-sm p-8 mb-8">
    <h2 class="text-2xl font-bold text-text-primary mb-6"><%= t('profile.language_preferences') %></h2>
    
    <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-4" do |form| %>
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary"><%= t('profile.language') %></h3>
          <p class="text-sm text-text-secondary"><%= t('profile.current_language') %>: <%= t("profile.languages.#{I18n.locale}") %></p>
        </div>
        <div class="flex items-center space-x-4">
          <%= form.select :locale, 
              options_for_select([
                [t('profile.languages.en'), 'en'],
                [t('profile.languages.de'), 'de']
              ], @user.locale),
              {},
              { 
                class: "bg-white border border-gray-300 rounded-lg px-3 py-2 text-text-primary focus:outline-none focus:ring-2 focus:ring-primary-accent",
                onchange: "this.form.submit();"
              } %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Account Settings -->
  <div class="bg-background-secondary rounded-2xl shadow-sm p-8 mb-8">
    <h2 class="text-2xl font-bold text-text-primary mb-6"><%= t('profile.account_settings') %></h2>
    
    <div class="space-y-4">
      <!-- Account Actions -->
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary"><%= t('profile.email_address') %></h3>
          <p class="text-sm text-text-secondary"><%= @user.email_address %></p>
        </div>
        <button class="text-primary-accent hover:text-blue-400 font-medium"><%= t('actions.update') %></button>
      </div>
      
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary"><%= t('auth.password') %></h3>
          <p class="text-sm text-text-secondary"><%= t('profile.password_updated_recently') %></p>
        </div>
        <%= link_to t('auth.change_password'), new_password_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
    </div>
  </div>

  <!-- App Settings -->
  <div class="bg-background-secondary rounded-2xl shadow-sm p-8 mb-8">
    <h2 class="text-2xl font-bold text-text-primary mb-6"><%= t('profile.app_preferences') %></h2>
    
    <div class="space-y-4">
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary"><%= t('recipes.recipe_library') %></h3>
          <p class="text-sm text-text-secondary"><%= t('profile.browse_recipes_desc') %></p>
        </div>
        <%= link_to t('profile.browse_recipes'), recipe_library_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
      
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary"><%= t('navigation.timeline') %></h3>
          <p class="text-sm text-text-secondary"><%= t('profile.timeline_desc') %></p>
        </div>
        <%= link_to t('profile.view_timeline'), timeline_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
      
      <div class="flex items-center justify-between p-4 rounded-lg bg-background-primary">
        <div>
          <h3 class="font-semibold text-text-primary"><%= t('profile.favorite_locations') %></h3>
          <p class="text-sm text-text-secondary"><%= t('profile.favorite_locations_desc') %></p>
        </div>
        <%= link_to t('profile.view_locations'), favorite_locations_path, class: "text-primary-accent hover:text-blue-400 font-medium" %>
      </div>
    </div>
  </div>

  <!-- Logout -->
  <div class="text-center">
    <%= button_to t('navigation.logout'), session_path, method: :delete, 
        class: "bg-accent-red text-white px-8 py-3 rounded-xl font-semibold hover:bg-red-600 transition-colors shadow-sm",
        data: { confirm: t('profile.confirm_logout') } %>
  </div>
</div>