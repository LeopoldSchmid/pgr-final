<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="bg-background-secondary rounded-xl shadow-sm p-4 mb-4">
    <%= link_to trip_expenses_path(@trip), class: "text-primary-accent hover:text-blue-400 font-medium flex items-center" do %>
      <span class="mr-2">‚Üê</span> Back to Expenses ‚Ä¢ <span class="ml-2">Edit Expense</span>
    <% end %>
  </div>

  <!-- Edit Expense Form -->
  <div class="bg-background-secondary rounded-xl shadow-sm p-4">
    <%= form_with model: [@trip, @expense], local: true, class: "space-y-6", 
        data: { controller: "image-preview" } do |form| %>
      
      <!-- Amount, Category and Payer Row -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Amount -->
        <div>
          <%= form.label :amount, class: "block text-purple-700 font-medium mb-2" do %>
            üí∞ Amount
          <% end %>
          <div class="relative">
            <%= form.number_field :amount, 
                step: 0.01,
                class: "w-full p-3 border border-purple-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            <span class="absolute right-3 top-3 text-purple-600 text-sm">EUR</span>
          </div>
        </div>

        <!-- Category -->
        <div>
          <%= form.label :category, class: "block text-purple-700 font-medium mb-2" do %>
            üè∑Ô∏è Category
          <% end %>
          <%= form.select :category, 
              options_for_select([
                ['üçΩÔ∏è Food & Drinks', 'food'],
                ['üè® Accommodation', 'accommodation'], 
                ['üöó Transport', 'transport'],
                ['üéØ Activities', 'activities'],
                ['üõí Shopping', 'shopping'],
                ['üí∞ Other', 'other']
              ], @expense.category),
              {},
              class: "w-full p-3 border border-purple-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>
        
        <!-- Payer -->
        <div>
          <%= form.label :payer_id, class: "block text-purple-700 font-medium mb-2" do %>
            üí≥ Who Paid?
          <% end %>
          <%= form.select :payer_id, 
              options_for_select(@trip_members.uniq.map { |member| 
                [member.email_address + (member == Current.user ? ' (You)' : ''), member.id] 
              }, @expense.payer.id),
              {},
              class: "w-full p-3 border border-purple-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        </div>
      </div>

      <!-- Description -->
      <div>
        <%= form.label :description, class: "block text-purple-700 font-medium mb-2" do %>
          üìù Description
        <% end %>
        <%= form.text_field :description, 
            class: "w-full p-3 border border-purple-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <!-- Receipt Upload -->
      <div class="bg-purple-100 rounded-xl p-4">
        <%= form.label :receipt, class: "block text-purple-800 font-semibold mb-2" do %>
          üì∑ Receipt (optional)
        <% end %>
        
        <!-- Current Receipt -->
        <% if @expense.receipt.attached? %>
          <div class="mb-4">
            <p class="text-sm text-purple-700 mb-2">Current receipt:</p>
            <%= image_tag @expense.receipt, class: "h-32 object-cover rounded-lg shadow-sm mb-2" %>
            <p class="text-xs text-purple-600">Upload a new image to replace this one</p>
          </div>
        <% end %>
        
        <%= form.file_field :receipt, 
            accept: "image/*",
            data: { 
              image_preview_target: "input",
              action: "change->image-preview#preview"
            },
            class: "w-full text-sm text-purple-700 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-purple-200 file:text-purple-800 hover:file:bg-purple-300 cursor-pointer" %>
        
        <!-- New Receipt Preview -->
        <div data-image-preview-target="container" class="mt-4 hidden">
          <p class="text-sm text-purple-700 mb-2">New receipt preview:</p>
          <div class="relative inline-block">
            <img data-image-preview-target="preview" 
                 class="max-w-full h-48 object-cover rounded-lg shadow-md" 
                 alt="Receipt preview">
            <button type="button" 
                    data-action="click->image-preview#removeImage"
                    class="absolute top-2 right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs font-bold hover:bg-red-600 transition-colors">
              √ó
            </button>
          </div>
        </div>
      </div>

      <!-- Participants Selection and Splitting -->
      <div class="bg-yellow-50 rounded-xl p-4" data-controller="expense-split">
        <h4 class="font-semibold text-yellow-900 mb-3">üë• How to split this expense?</h4>
        
        <!-- Split Type Selection -->
        <div class="mb-4">
          <div class="flex space-x-4">
            <label class="flex items-center cursor-pointer">
              <input type="radio" name="split_type" value="equal" 
                     <%= @expense.expense_participants.all? { |p| p.amount_owed == (@expense.amount / @expense.expense_participants.count).round(2) } ? 'checked' : '' %>
                     data-action="change->expense-split#toggleSplitType"
                     class="mr-2 text-yellow-600 focus:ring-yellow-500">
              <span class="text-yellow-800 font-medium">Split Equally</span>
            </label>
            <label class="flex items-center cursor-pointer">
              <input type="radio" name="split_type" value="custom" 
                     <%= !@expense.expense_participants.all? { |p| p.amount_owed == (@expense.amount / @expense.expense_participants.count).round(2) } ? 'checked' : '' %>
                     data-action="change->expense-split#toggleSplitType"
                     class="mr-2 text-yellow-600 focus:ring-yellow-500">
              <span class="text-yellow-800 font-medium">Custom Amounts</span>
            </label>
          </div>
        </div>
        
        <!-- Equal Split -->
        <div data-expense-split-target="equalSplit" <%= @expense.expense_participants.all? { |p| p.amount_owed == (@expense.amount / @expense.expense_participants.count).round(2) } ? '' : 'class="hidden"' %>>
          <p class="text-yellow-700 text-sm mb-4">Select who should share this expense equally</p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <% @trip_members.uniq.each do |member| %>
              <label class="flex items-center p-3 bg-white rounded-lg border border-yellow-300 cursor-pointer hover:bg-yellow-100 transition-colors">
                <%= check_box_tag 'expense[participant_ids][]', member.id, 
                    @selected_participant_ids.include?(member.id), 
                    class: "mr-3 rounded scale-125 text-yellow-600 focus:ring-yellow-500" %>
                <div>
                  <span class="font-medium text-yellow-800"><%= member.email_address %></span>
                  <% if member == Current.user %>
                    <span class="text-yellow-600 text-sm ml-2">(You)</span>
                  <% end %>
                  <% if member == @trip.user %>
                    <span class="text-yellow-600 text-sm ml-2">(Trip Owner)</span>
                  <% end %>
                </div>
              </label>
            <% end %>
          </div>
        </div>
        
        <!-- Custom Split -->
        <div data-expense-split-target="customSplit" <%= !@expense.expense_participants.all? { |p| p.amount_owed == (@expense.amount / @expense.expense_participants.count).round(2) } ? '' : 'class="hidden"' %>>
          <p class="text-yellow-700 text-sm mb-4">Enter custom amounts for each participant (must add up to total amount)</p>
          <div class="space-y-3">
            <% @trip_members.uniq.each do |member| %>
              <% participant = @expense.expense_participants.find { |p| p.user_id == member.id } %>
              <div class="flex items-center p-3 bg-white rounded-lg border border-yellow-300">
                <input type="hidden" name="expense[custom_participant_ids][]" value="<%= member.id %>">
                <div class="flex-1 mr-3">
                  <span class="font-medium text-yellow-800"><%= member.email_address %></span>
                  <% if member == Current.user %>
                    <span class="text-yellow-600 text-sm ml-2">(You)</span>
                  <% end %>
                </div>
                <div class="flex items-center">
                  <%= number_field_tag "expense[custom_amounts][#{member.id}]", participant&.amount_owed&.to_s || "0.00", 
                      step: 0.01, min: 0,
                      class: "w-24 p-2 border border-yellow-300 rounded-lg text-right focus:ring-yellow-500 focus:border-yellow-500",
                      data: { action: "input->expense-split#calculateRemaining" } %>
                  <span class="ml-2 text-yellow-600 text-sm">EUR</span>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-3 p-3 bg-yellow-100 rounded-lg">
            <div class="text-sm text-yellow-800">
              <span>Total assigned: </span>
              <span data-expense-split-target="totalAssigned" class="font-bold"><%= "%.2f" % @expense.expense_participants.sum(:amount_owed) %></span>
              <span> EUR</span>
            </div>
            <div class="text-sm text-yellow-800">
              <span>Remaining: </span>
              <span data-expense-split-target="remaining" class="font-bold"><%= "%.2f" % (@expense.amount - @expense.expense_participants.sum(:amount_owed)) %></span>
              <span> EUR</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Date -->
      <div>
        <%= form.label :expense_date, class: "block text-purple-700 font-medium mb-2" do %>
          üìÖ Date
        <% end %>
        <%= form.date_field :expense_date, 
            class: "w-full p-3 border border-purple-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <!-- Submit Button -->
      <div class="text-center pt-4">
        <%= form.submit "üí∞ Update Expense", 
            class: "bg-gradient-to-r from-purple-600 to-pink-600 text-white px-8 py-4 rounded-xl font-bold hover:from-purple-700 hover:to-pink-700 transition-all duration-200 shadow-lg transform hover:scale-105 text-lg" %>
      </div>
    <% end %>
  </div>
</div>
