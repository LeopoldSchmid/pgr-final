<div class="container mx-auto px-4 py-6">
  <!-- Navigation Context Indicator -->
  <%= navigation_context_indicator.html_safe if navigation_context_indicator %>

  <!-- Current Planning Trips -->
  <% if @planning_trips.any? %>
    <section class="mb-12">
      <h2 class="text-xl font-bold text-text-primary mb-6 flex items-center">
        <span class="mr-3">🗓️</span> Trips in Planning
      </h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @planning_trips.each do |trip| %>
          <%= render 'trips/trip_card', trip: trip, phase: 'plan' %>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Recent Templates -->
  <% if @recent_templates.any? %>
    <section>
      <h2 class="text-xl font-bold text-text-primary mb-6 flex items-center">
        <span class="mr-3">💫</span> Recent Trips (Use as Templates)
      </h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @recent_templates.each do |trip| %>
          <div class="bg-background-secondary rounded-2xl shadow-sm p-6 hover:shadow-md transition-all duration-300 transform hover:scale-105">
            <h3 class="font-bold text-text-primary mb-3 text-lg"><%= trip.name %></h3>
            <p class="text-text-secondary text-sm mb-4 line-clamp-2 leading-relaxed"><%= trip.description %></p>
            <div class="flex justify-between items-center">
              <span class="text-xs text-text-secondary bg-white px-3 py-1 rounded-full font-medium">
                📸 <%= trip.start_date&.strftime("%b %Y") %>
              </span>
              <button class="text-primary-accent text-sm font-bold hover:text-blue-400 flex items-center group">
                Copy Trip
                <span class="ml-2 transform group-hover:translate-x-1 transition-transform">✨</span>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Empty State -->
  <% if @planning_trips.empty? && @recent_templates.empty? %>
    <div class="bg-background-secondary rounded-2xl shadow-sm p-12">
      <div class="text-center">
        <div class="text-8xl mb-6 opacity-80">🌿</div>
        <h2 class="text-2xl font-bold text-text-primary mb-4">Ready to plant the seeds of adventure?</h2>
        <p class="text-text-secondary text-lg mb-8 max-w-md mx-auto leading-relaxed">Create your first trip and start collaborating with friends to grow unforgettable memories!</p>
        <%= link_to "Plant Your First Adventure", new_trip_path, class: "bg-primary-accent text-white px-8 py-4 rounded-xl font-bold hover:bg-blue-400 transition-all duration-200 shadow-lg transform hover:scale-105" %>
      </div>
    </div>
  <% end %>
  
  <!-- Floating Action Button -->
  <%= link_to new_trip_path, 
      class: "fixed bottom-6 right-6 bg-primary-accent text-white w-14 h-14 rounded-full shadow-lg hover:shadow-xl hover:bg-blue-400 transition-all duration-200 flex items-center justify-center text-2xl z-50",
      title: "Create New Trip" do %>
    ➕
  <% end %>
</div>
