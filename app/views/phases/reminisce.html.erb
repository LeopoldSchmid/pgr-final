<div class="container mx-auto px-4 py-6">
  <!-- Navigation Context Indicator -->
  <%= navigation_context_indicator.html_safe if navigation_context_indicator %>
  
  <h1 class="text-2xl font-bold text-text-primary mb-6">Trip Memories</h1>

  <!-- Completed Trips -->
  <% if @completed_trips.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @completed_trips.each do |trip| %>
        <div class="bg-background-secondary rounded-lg shadow-sm p-4 hover:shadow-md transition-shadow flex flex-col">
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-semibold text-text-primary"><%= trip.name %></h3>
            <div class="flex items-center space-x-2">
              <% if trip.user != Current.user %>
                <span class="bg-accent-yellow text-text-primary text-xs px-2 py-1 rounded-full">Member</span>
              <% end %>
              <span class="bg-gray-200 text-gray-800 text-xs px-2 py-1 rounded-full">Completed</span>
            </div>
          </div>
          <p class="text-text-secondary text-sm mb-3 line-clamp-2 flex-grow"><%= trip.description %></p>
          
          <div class="space-y-2 mb-4">
            <% if trip.start_date && trip.end_date %>
              <div class="text-xs text-text-secondary">
                <%= trip.start_date.strftime("%b %d") %> - <%= trip.end_date.strftime("%b %d, %Y") %>
              </div>
            <% end %>
          </div>

          <div class="flex space-x-2 mt-auto">
            <%= link_to reminisce_trip_path(trip), class: "flex-1 bg-primary-accent text-white text-sm px-3 py-2 rounded font-medium text-center hover:bg-blue-400 transition-colors" do %>
              View Memories
            <% end %>
            <button class="px-3 py-2 text-primary-accent text-sm font-medium hover:text-blue-400">
              Use Template
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Statistics -->
    <div class="mt-8 bg-background-secondary rounded-lg p-6">
      <h3 class="text-lg font-semibold text-text-primary mb-4">Your Travel Stats</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-accent"><%= @completed_trips.count %></div>
          <div class="text-sm text-text-secondary">Trips Completed</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-accent">
            <%= @completed_trips.sum { |trip| (trip.end_date - trip.start_date).to_i if trip.start_date && trip.end_date }.to_i %>
          </div>
          <div class="text-sm text-text-secondary">Days Traveled</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-accent">â€”</div>
          <div class="text-sm text-text-secondary">Recipes Tried</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-accent">â€”</div>
          <div class="text-sm text-text-secondary">Total Expenses</div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="text-6xl mb-4">ðŸ’­</div>
      <h2 class="text-xl font-semibold text-text-primary mb-2">No completed trips yet</h2>
      <p class="text-text-secondary mb-6">Your trip memories and templates will appear here after you complete your adventures!</p>
      <%= link_to "Plan Your First Trip", plan_path, class: "bg-primary-accent text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-400 transition-colors" %>
    </div>
  <% end %>
  
  <!-- Floating Action Button -->
  <%= link_to new_trip_path, 
      class: "fixed bottom-6 right-6 bg-primary-accent text-white w-14 h-14 rounded-full shadow-lg hover:shadow-xl hover:bg-blue-400 transition-all duration-200 flex items-center justify-center text-2xl z-50",
      title: "Create New Trip" do %>
    âž•
  <% end %>
</div>
