<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-text-primary">Edit Discussion</h1>
    <%= link_to "← Back to Discussion", trip_discussion_path(@trip, @discussion_post), class: "text-primary-accent hover:underline" %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-6">
    <%= form_with model: [@trip, @discussion_post], local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-accent focus:border-transparent" %>
        <% if @discussion_post.errors[:title].any? %>
          <p class="text-red-600 text-sm mt-1"><%= @discussion_post.errors[:title].first %></p>
        <% end %>
      </div>
      
      <div>
        <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :content, rows: 8,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-accent focus:border-transparent" %>
        <% if @discussion_post.errors[:content].any? %>
          <p class="text-red-600 text-sm mt-1"><%= @discussion_post.errors[:content].first %></p>
        <% end %>
      </div>
      
      <div class="flex justify-end gap-4">
        <%= link_to "Cancel", trip_discussion_path(@trip, @discussion_post), 
            class: "px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-all duration-200" %>
        <%= form.submit "Update Discussion", 
            class: "bg-primary-accent text-white px-6 py-2 rounded-lg font-bold hover:bg-blue-400 transition-all duration-200" %>
      </div>
    <% end %>
  </div>
</div>