<!-- Left Sidebar - Desktop only (hidden on mobile) -->
<nav class="hidden md:flex md:flex-col md:fixed md:inset-y-0 md:left-0 md:w-64 md:bg-background-secondary md:border-r md:border-gray-200 md:pt-20 md:z-30">
  <div class="flex-1 flex flex-col overflow-y-auto">
    <div class="flex-1 px-4 py-6 space-y-2">
      <!-- Home -->
      <%= link_to root_path,
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 #{active_nav_class(:home)} hover:bg-background-primary hover:text-primary-accent group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= nav_icon_for(:home) %>" />
        </svg>
        <span class="font-medium"><%= t('navigation.home') %></span>
      <% end %>

      <!-- Trip -->
      <%= link_to scoped_feature_path(:trip),
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 #{active_nav_class(:trip)} hover:bg-background-primary hover:text-primary-accent group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= nav_icon_for(:trip) %>" />
        </svg>
        <span class="font-medium"><%= t('navigation.trip') %></span>
      <% end %>

      <!-- Plans -->
      <%= link_to scoped_feature_path(:plans),
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 #{active_nav_class(:plans)} hover:bg-background-primary hover:text-primary-accent group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= nav_icon_for(:plans) %>" />
        </svg>
        <span class="font-medium"><%= t('navigation.plans') %></span>
      <% end %>

      <!-- Memories -->
      <%= link_to scoped_feature_path(:memories),
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 #{active_nav_class(:memories)} hover:bg-background-primary hover:text-primary-accent group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= nav_icon_for(:memories) %>" />
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= nav_icon_for(:memories_circle) %>" />
        </svg>
        <span class="font-medium"><%= t('navigation.memories') %></span>
      <% end %>

      <!-- Expenses -->
      <%= link_to scoped_feature_path(:expenses),
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-all duration-200 #{active_nav_class(:expenses)} hover:bg-background-primary hover:text-primary-accent group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= nav_icon_for(:expenses) %>" />
        </svg>
        <span class="font-medium"><%= t('navigation.expenses') %></span>
      <% end %>
    </div>

    <!-- Bottom Section: Current Trip Indicator -->
    <% if current_trip %>
      <div class="px-4 py-4 border-t border-gray-200">
        <div class="bg-primary-accent/10 rounded-lg p-3">
          <div class="text-xs font-medium text-text-secondary mb-1">
            <%= t('navigation.current_trip') %>
          </div>
          <%= link_to select_trip_path, class: "flex items-center justify-between group" do %>
            <span class="text-sm font-semibold text-text-primary group-hover:text-primary-accent truncate">
              <%= current_trip.name %>
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-text-secondary group-hover:text-primary-accent flex-shrink-0 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</nav>

<!-- Spacer for left sidebar on desktop -->
<div class="hidden md:block md:w-64 md:flex-shrink-0" aria-hidden="true"></div>
