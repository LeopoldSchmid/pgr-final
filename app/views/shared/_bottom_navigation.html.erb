<!--
  Bottom Navigation Bar for mobile devices.
  Features a modern floating design with a colored pill behind the active tab.
  This component is hidden on medium and larger screens (md:hidden).
-->
<nav class="fixed bottom-0 left-0 right-0 md:hidden z-50 safe-area-inset-bottom px-4 pb-4">
  <div class="bg-background-secondary/95 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20">
    <div class="flex justify-around items-center w-full px-2 py-2">
      <%# Navigation items definition - context-aware %>
      <% nav_items = [
        { path: root_path, icon: 'home', label: t('navigation.home'), active: current_page?(root_path) },
        { path: context_aware_navigation_path('plan'), icon: 'clipboard-list', label: t('trips.phases.plan'), active: current_page?(context_aware_navigation_path('plan')) || (in_trip_context? && current_page?(plan_trip_path(current_trip_context))) },
        { path: context_aware_navigation_path('go'), icon: 'paper-airplane', label: t('trips.phases.go'), active: current_page?(context_aware_navigation_path('go')) || (in_trip_context? && current_page?(go_trip_path(current_trip_context))) },
        { path: context_aware_navigation_path('reminisce'), icon: 'camera', label: t('trips.phases.reminisce'), active: current_page?(context_aware_navigation_path('reminisce')) || (in_trip_context? && current_page?(reminisce_trip_path(current_trip_context))) },
        { path: "/profile", icon: 'user', label: t('navigation.profile'), active: current_page?("/profile") }
      ] %>

      <%# Loop through navigation items and render them %>
      <% nav_items.each do |item| %>
        <%= link_to item[:path], class: "flex flex-col items-center justify-center text-center w-full py-2 transition-all duration-300 #{item[:active] ? 'text-white' : 'text-text-primary/70 hover:text-text-primary'}" do %>
          <%# SVG Icon with modern floating pill background %>
          <div class="w-12 h-12 flex items-center justify-center mb-1 transition-all duration-300 #{item[:active] ? 'bg-primary-accent rounded-2xl shadow-lg scale-110' : 'hover:bg-white/10 rounded-xl'}">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 #{item[:active] ? 'scale-110' : ''} transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <% if item[:icon] == 'home' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            <% elsif item[:icon] == 'book-open' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v11.494m-5.75-8.494v11.494M17.75 6.253v11.494M2 12h10M12 12h10" />
            <% elsif item[:icon] == 'clipboard-list' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            <% elsif item[:icon] == 'paper-airplane' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            <% elsif item[:icon] == 'camera' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
            <% elsif item[:icon] == 'user' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            <% end %>
          </svg>
        </div>
        <%# Label with modern styling %>
        <span class="text-xs font-medium tracking-wide transition-all duration-300 #{item[:active] ? 'font-bold' : ''}"><%= item[:label] %></span>
      <% end %>
    <% end %>
    </div>
  </div>
</nav>
