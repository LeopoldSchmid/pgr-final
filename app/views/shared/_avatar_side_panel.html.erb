<!-- Avatar Side Panel - Slides in from left on mobile, dropdown on desktop -->
<div class="relative">
  <!-- Backdrop overlay (mobile only) -->
  <div data-side-panel-target="backdrop"
       data-action="click->side-panel#close"
       class="fixed inset-0 bg-black/50 z-40 hidden md:hidden transition-opacity">
  </div>

  <!-- Side Panel -->
  <div data-side-panel-target="panel"
       data-side-panel-element="panel"
       class="fixed top-16 right-0 md:right-4 md:top-20 w-80 md:w-72 bg-background-secondary shadow-2xl z-50 transform translate-x-full md:translate-x-0 md:scale-0 md:origin-top-right transition-all duration-300 ease-in-out md:rounded-lg h-[calc(100vh-4rem)] md:h-auto overflow-hidden">

    <!-- Panel Header (mobile only) -->
    <div class="md:hidden flex items-center justify-between p-4 border-b border-gray-200">
      <h3 class="text-lg font-bold text-text-primary"><%= t('navigation.menu') %></h3>
      <button type="button"
              data-action="click->side-panel#close"
              class="text-text-secondary hover:text-text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Panel Content -->
    <div class="p-4 space-y-2 max-h-[calc(100vh-8rem)] md:max-h-96 overflow-y-auto">
      <!-- User Info -->
      <div class="pb-4 border-b border-gray-200 mb-2">
        <div class="flex items-center space-x-3">
          <%= user_avatar(Current.user, size: 12) %>
          <div class="flex-1 min-w-0">
            <div class="font-semibold text-text-primary truncate">
              <%= Current.user.email_address %>
            </div>
          </div>
        </div>
      </div>

      <!-- Profile Link -->
      <%= link_to profile_path,
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-background-primary transition-colors group",
          data: { action: "click->side-panel#close" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-text-secondary group-hover:text-primary-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span class="text-text-primary group-hover:text-primary-accent font-medium">
          <%= t('navigation.profile') %>
        </span>
      <% end %>

      <!-- Invitations Link with Badge -->
      <%= link_to user_invitations_path,
          class: "flex items-center justify-between px-4 py-3 rounded-lg hover:bg-background-primary transition-colors group",
          data: { action: "click->side-panel#close" } do %>
        <div class="flex items-center space-x-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-text-secondary group-hover:text-primary-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="text-text-primary group-hover:text-primary-accent font-medium">
            <%= t('invitations.title') %>
          </span>
        </div>
        <% if pending_invitations_count > 0 %>
          <span class="bg-accent-red text-white text-xs rounded-full w-6 h-6 flex items-center justify-center font-bold">
            <%= pending_invitations_count %>
          </span>
        <% end %>
      <% end %>

      <!-- Divider -->
      <div class="border-t border-gray-200 my-2"></div>

      <!-- Future Features (Grayed Out) -->
      <div class="px-4 py-3 rounded-lg opacity-50 cursor-not-allowed">
        <div class="flex items-center space-x-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="text-text-secondary font-medium">
            <%= t('navigation.calendar') %> <span class="text-xs">(Coming Soon)</span>
          </span>
        </div>
      </div>

      <%= link_to recipe_library_path,
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-background-primary transition-colors group",
          data: { action: "click->side-panel#close" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-text-secondary group-hover:text-primary-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <span class="text-text-primary group-hover:text-primary-accent font-medium">
          <%= t('navigation.recipes') %>
        </span>
      <% end %>

      <!-- Divider -->
      <div class="border-t border-gray-200 my-2"></div>

      <!-- Sign Out -->
      <%= button_to session_path, method: :delete,
          class: "w-full flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-red-50 transition-colors group text-left" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-text-secondary group-hover:text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        <span class="text-text-primary group-hover:text-red-600 font-medium">
          <%= t('navigation.sign_out') %>
        </span>
      <% end %>
    </div>
  </div>
</div>
