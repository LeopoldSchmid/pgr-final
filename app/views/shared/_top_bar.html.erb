<!-- Top Bar - Responsive design for mobile and desktop -->
<div id="app-header" class="fixed top-0 left-0 right-0 bg-white z-40" data-controller="permanent-header" data-turbo-permanent>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Left Side: Trip Context / App Name -->
      <div class="flex items-center space-x-3">
        <!-- Trip Context / App Name -->
        <% if current_trip %>
          <%= link_to select_trip_path, class: "flex items-center space-x-2 hover:text-primary-accent transition-colors group" do %>
            <span class="text-lg font-bold text-text-primary group-hover:text-primary-accent">
              <%= current_trip.name %>
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-text-secondary group-hover:text-primary-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          <% end %>
        <% else %>
          <%= link_to root_path, class: "flex items-center" do %>
            <span class="text-lg font-bold text-primary-accent">
              <%= t('app_name') %>
            </span>
          <% end %>
        <% end %>
      </div>

      <!-- Right Side: Search + Help + Avatar -->
      <div class="flex items-center space-x-4">
        <!-- Global Search Button -->
        <button
          data-action="click->global-search#open"
          class="text-text-secondary hover:text-text-primary transition-colors"
          title="Search (âŒ˜K)">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>

        <!-- Help Icon -->
        <%= link_to "#", class: "text-text-secondary hover:text-text-primary transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>

        <!-- Avatar Button -->
        <button type="button"
                data-action="click->side-panel#toggle"
                data-side-panel-element="button"
                class="relative flex items-center space-x-2 focus:outline-none focus:ring-2 focus:ring-primary-accent rounded-full">
          <%= user_avatar(Current.user, size: 8) %>
        </button>
      </div>
    </div>
  </div>
</div>
