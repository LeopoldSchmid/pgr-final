<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || t('app_name') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps %>
    <%= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png?v=2" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png?v=2">

    <%# Google Fonts - Instrument Sans %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%# Leaflet.js CSS %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" 
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" 
          crossorigin=""/>
    <%# Flatpickr CSS %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <%# FullCalendar CSS %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fullcalendar/core/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fullcalendar/timegrid/main.css">
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-gradient-primary text-text-primary font-sans overflow-x-hidden" data-controller="page-transition">
    <% if authenticated? %>
      <!-- Top Navigation for authenticated users -->
      <nav class="sticky top-0 bg-background-secondary shadow-sm z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <%= link_to root_path, class: "flex items-center" do %>
              <span class="text-xl font-bold text-primary-accent">
                <%= t('app_name') %>
              </span>
            <% end %>
            
            <!-- Desktop navigation - hidden on mobile -->
            <div class="hidden md:flex items-center space-x-6">
              <%= link_to root_path, class: "text-text-primary hover:text-primary-accent font-semibold transition-colors px-3 py-2 rounded-lg #{'text-primary-accent' if current_page?(root_path)}" do %>
                <%= t('navigation.home') %>
              <% end %>
              <%= link_to context_aware_navigation_path('plan'), class: "text-text-primary hover:text-primary-accent font-semibold transition-colors px-3 py-2 rounded-lg #{'text-primary-accent' if current_page?(context_aware_navigation_path('plan')) || (defined?(current_trip_context) && in_trip_context? && current_page?(plan_trip_path(current_trip_context)))}" do %>
                <%= t('trips.phases.plan') %>
              <% end %>
              <%= link_to context_aware_navigation_path('go'), class: "text-text-primary hover:text-primary-accent font-semibold transition-colors px-3 py-2 rounded-lg #{'text-primary-accent' if current_page?(context_aware_navigation_path('go')) || (defined?(current_trip_context) && in_trip_context? && current_page?(go_trip_path(current_trip_context)))}" do %>
                <%= t('trips.phases.go') %>
              <% end %>
              <%= link_to context_aware_navigation_path('reminisce'), class: "text-text-primary hover:text-primary-accent font-semibold transition-colors px-3 py-2 rounded-lg #{'text-primary-accent' if current_page?(context_aware_navigation_path('reminisce')) || (defined?(current_trip_context) && in_trip_context? && current_page?(reminisce_trip_path(current_trip_context)))}" do %>
                <%= t('trips.phases.reminisce') %>
              <% end %>
              <%= link_to "/profile", class: "text-text-primary hover:text-primary-accent font-semibold transition-colors px-3 py-2 rounded-lg #{'text-primary-accent' if current_page?('/profile')}" do %>
                <%= t('navigation.profile') %>
              <% end %>
            </div>
            
            <div class="flex items-center space-x-4">
              <!-- Global Search -->
              <div class="hidden md:block" data-controller="global-search" data-global-search-url-value="<%= global_search_path %>">
                <!-- Search Input Button -->
                <button
                  data-action="click->global-search#open"
                  class="flex items-center gap-2 px-3 py-1.5 text-sm text-text-secondary bg-background-primary/50 hover:bg-background-primary rounded-lg border border-background-secondary transition-all duration-200 group">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                  <span class="hidden lg:inline">Search...</span>
                  <kbd class="hidden lg:inline-flex items-center gap-1 px-1.5 py-0.5 text-xs font-mono bg-white rounded border border-background-secondary text-text-secondary">
                    ⌘K
                  </kbd>
                </button>

                <!-- Search Modal Backdrop -->
                <div
                  data-global-search-target="backdrop"
                  data-action="click->global-search#clickBackdrop"
                  class="hidden fixed inset-0 bg-black/50 z-50 backdrop-blur-sm transition-opacity duration-200">
                </div>

                <!-- Search Modal Container -->
                <div
                  data-global-search-target="container"
                  class="hidden fixed top-20 left-1/2 -translate-x-1/2 w-full max-w-2xl z-50 px-4">
                  <div class="bg-white rounded-xl shadow-2xl border border-background-secondary overflow-hidden animate-slideDown">
                    <!-- Search Input -->
                    <div class="flex items-center gap-3 px-4 py-3 border-b border-background-secondary">
                      <svg class="w-5 h-5 text-text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                      </svg>
                      <input
                        type="text"
                        data-global-search-target="input"
                        data-action="input->global-search#search keydown->global-search#handleKeydown"
                        placeholder="Search trips, entries, recipes, and more..."
                        class="flex-1 text-base text-text-primary placeholder-text-secondary bg-transparent border-none outline-none"
                        autocomplete="off"
                        spellcheck="false">
                      <kbd class="px-2 py-1 text-xs font-mono bg-background-primary rounded border border-background-secondary text-text-secondary">
                        ESC
                      </kbd>
                    </div>

                    <!-- Search Results -->
                    <div
                      data-global-search-target="results"
                      class="hidden max-h-96 overflow-y-auto">
                      <div data-global-search-target="resultsList"></div>
                    </div>

                    <!-- Search Tips (shown when no results) -->
                    <div class="px-4 py-3 bg-background-primary/30 border-t border-background-secondary">
                      <div class="flex items-center justify-between text-xs text-text-secondary">
                        <div class="flex items-center gap-4">
                          <span class="flex items-center gap-1">
                            <kbd class="px-1.5 py-0.5 bg-white rounded border border-background-secondary">↑↓</kbd>
                            Navigate
                          </span>
                          <span class="flex items-center gap-1">
                            <kbd class="px-1.5 py-0.5 bg-white rounded border border-background-secondary">↵</kbd>
                            Select
                          </span>
                          <span class="flex items-center gap-1">
                            <kbd class="px-1.5 py-0.5 bg-white rounded border border-background-secondary">ESC</kbd>
                            Close
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Invitation notifications -->
              <% pending_invitations = Invitation.where(email: Current.user.email_address).pending %>
              <% if pending_invitations.any? %>
                <%= link_to user_invitations_path,
                    class: "relative bg-primary-accent text-white px-3 py-2 rounded-lg text-sm font-medium hover:bg-primary-accent/80 transition-all duration-200 shadow-sm" do %>
                  <%= t('invitations.title') %>
                  <span class="absolute -top-2 -right-2 bg-accent-red text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                    <%= pending_invitations.count %>
                  </span>
                <% end %>
              <% end %>

              <span class="text-text-secondary hidden sm:block font-medium"><%= Current.user.email_address %></span>
              <%= button_to session_path, method: :delete, class: "text-text-secondary hover:text-text-primary transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <!-- PWA Install Banner -->
      <div data-controller="pwa-install" class="hidden bg-primary-accent text-white text-center py-3 px-4 sm:px-6 lg:px-8" role="alert">
        <div class="flex items-center justify-between max-w-7xl mx-auto">
          <p class="font-medium"><%= t('pwa.install_message') %></p>
          <div class="flex items-center space-x-4">
            <button data-action="pwa-install#install" class="bg-white text-primary-accent px-4 py-2 rounded-lg font-bold hover:bg-gray-200 transition-colors text-sm"><%= t('pwa.install_button') %></button>
            <button data-action="pwa-install#dismiss" class="text-white opacity-75 hover:opacity-100 transition-opacity">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <!-- JavaScript Alert Messages -->
    <% if flash[:alert_message] %>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          alert('<%= j(flash[:alert_message]) %>');
        });
      </script>
    <% end %>

    <!-- Flash messages -->
    <% if notice %>
      <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mx-4 mt-4">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mx-4 mt-4">
        <%= alert %>
      </div>
    <% end %>

    <!-- Main content with padding for mobile navigation -->
    <main class="pt-0 pb-20 md:pb-0">
      <%= yield %>
    </main>

    <!-- Bottom Navigation - only for authenticated users on mobile -->
    <% if authenticated? %>
      <%= render 'shared/bottom_navigation' %>
    <% end %>

    <!-- Floating Action Button System -->
    <%= render 'shared/floating_action_button' %>
  </body>
</html>
