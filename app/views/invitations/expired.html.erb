<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50 py-12 px-4">
  <div class="max-w-md mx-auto">
    <div class="bg-white rounded-2xl shadow-xl border border-red-200 overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-red-600 to-orange-600 px-6 py-8 text-center">
        <div class="text-6xl mb-4">‚è∞</div>
        <h1 class="text-2xl font-bold text-white mb-2">Invitation Expired</h1>
        <p class="text-red-100">This invitation is no longer valid</p>
      </div>

      <!-- Content -->
      <div class="p-6 space-y-4">
        <div class="text-center">
          <h2 class="text-xl font-bold text-gray-800 mb-1"><%= @invitation.trip.name %></h2>
          <p class="text-gray-600 text-sm mb-4"><%= @invitation.trip.description %></p>
        </div>

        <!-- Status Message -->
        <div class="bg-red-50 rounded-lg p-4">
          <p class="text-center text-gray-700 mb-2">
            This invitation expired on <%= @invitation.expires_at.strftime('%B %d, %Y at %I:%M %p') %>.
          </p>
          <p class="text-center text-sm text-gray-600">
            Please contact <%= @invitation.invited_by.email_address %> to request a new invitation.
          </p>
        </div>

        <!-- Action Button -->
        <div class="pt-4">
          <%= link_to root_path,
              class: "w-full bg-gray-500 text-white px-4 py-3 rounded-xl font-bold hover:bg-gray-600 transition-all duration-200 text-center block" do %>
            Back to Home
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
