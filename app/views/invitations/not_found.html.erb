<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50 py-12 px-4">
  <div class="max-w-md mx-auto">
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-8 text-center">
        <div class="text-6xl mb-4">üîç</div>
        <h1 class="text-2xl font-bold text-white mb-2">Invitation Not Found</h1>
        <p class="text-gray-100">We couldn't find this invitation</p>
      </div>

      <!-- Content -->
      <div class="p-6 space-y-4">
        <!-- Status Message -->
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-center text-gray-700 mb-2">
            This invitation link is invalid or has been removed.
          </p>
          <p class="text-center text-sm text-gray-600">
            Please check the link in your email or contact the person who invited you.
          </p>
        </div>

        <!-- Action Button -->
        <div class="pt-4">
          <%= link_to root_path,
              class: "w-full bg-gray-500 text-white px-4 py-3 rounded-xl font-bold hover:bg-gray-600 transition-all duration-200 text-center block" do %>
            Back to Home
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
