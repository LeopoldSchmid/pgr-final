<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50 py-12 px-4">
  <div class="max-w-md mx-auto">
    <div class="bg-white rounded-2xl shadow-xl border border-purple-200 overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-8 text-center">
        <div class="text-6xl mb-4">âœ“</div>
        <h1 class="text-2xl font-bold text-white mb-2">Already Responded</h1>
        <p class="text-purple-100">You've already responded to this invitation</p>
      </div>

      <!-- Content -->
      <div class="p-6 space-y-4">
        <div class="text-center">
          <h2 class="text-xl font-bold text-gray-800 mb-1"><%= @invitation.trip.name %></h2>
          <p class="text-gray-600 text-sm mb-4"><%= @invitation.trip.description %></p>
        </div>

        <!-- Status Message -->
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-center text-gray-700">
            <% if @invitation.status == 'accepted' %>
              You've already accepted this invitation. You should now have access to the trip.
            <% elsif @invitation.status == 'declined' %>
              You've declined this invitation.
            <% end %>
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3 pt-4">
          <% if @invitation.status == 'accepted' %>
            <%= link_to trip_path(@invitation.trip),
                class: "w-full bg-gradient-to-r from-purple-500 to-pink-600 text-white px-4 py-3 rounded-xl font-bold hover:from-purple-600 hover:to-pink-700 transition-all duration-200 shadow-lg text-center block" do %>
              Go to Trip
            <% end %>
          <% end %>

          <%= link_to root_path,
              class: "w-full bg-gray-500 text-white px-4 py-3 rounded-xl font-bold hover:bg-gray-600 transition-all duration-200 text-center block" do %>
            Back to Home
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
