<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50 py-12 px-4">
  <div class="max-w-md mx-auto">
    <!-- Trip Invitation Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-purple-200 overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-8 text-center">
        <div class="text-6xl mb-4">üéí</div>
        <h1 class="text-2xl font-bold text-white mb-2">You're Invited!</h1>
        <p class="text-purple-100">Join the adventure</p>
      </div>
      
      <!-- Content -->
      <div class="p-6 space-y-4">
        <div class="text-center">
          <h2 class="text-xl font-bold text-gray-800 mb-1"><%= @invitation.trip.name %></h2>
          <p class="text-gray-600 text-sm mb-4"><%= @invitation.trip.description %></p>
        </div>
        
        <!-- Trip Details -->
        <div class="bg-gray-50 rounded-lg p-4 space-y-2">
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600">Invited by:</span>
            <span class="font-medium"><%= @invitation.invited_by.email_address %></span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600">Role:</span>
            <span class="font-medium">
              <%= case @invitation.role
                  when 'admin' then 'üëë Admin'
                  when 'member' then 'üë§ Member' 
                  when 'guest' then 'üë• Guest'
                  end %>
            </span>
          </div>
          <% if @invitation.trip.start_date %>
            <div class="flex items-center justify-between text-sm">
              <span class="text-gray-600">Trip dates:</span>
              <span class="font-medium">
                <%= @invitation.trip.start_date.strftime('%b %d') %> - 
                <%= @invitation.trip.end_date.strftime('%b %d, %Y') %>
              </span>
            </div>
          <% end %>
        </div>
        
        <!-- Action Buttons -->
        <div class="space-y-3 pt-4">
          <%= link_to accept_invitation_path(@invitation.token), 
              method: :patch,
              class: "w-full bg-gradient-to-r from-green-500 to-green-600 text-white px-4 py-3 rounded-xl font-bold hover:from-green-600 hover:to-green-700 transition-all duration-200 shadow-lg text-center block" do %>
            ‚úÖ Accept Invitation
          <% end %>
          
          <%= link_to decline_invitation_path(@invitation.token), 
              method: :patch,
              class: "w-full bg-gray-500 text-white px-4 py-3 rounded-xl font-bold hover:bg-gray-600 transition-all duration-200 text-center block" do %>
            ‚ùå Decline
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="text-center mt-6 text-gray-500 text-sm">
      This invitation expires on <%= @invitation.expires_at.strftime('%B %d, %Y') %>
    </div>
  </div>
</div>
